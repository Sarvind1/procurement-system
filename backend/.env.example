# Application Settings
PROJECT_NAME="Procurement System API"
VERSION="1.0.0"
API_V1_STR="/api/v1"

# Security Settings
SECRET_KEY="your-secret-key-here-change-this-in-production"
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# Database Settings
DATABASE_URL="postgresql://postgres:postgres@localhost:5432/procurement_db"

# PostgreSQL Settings (for docker-compose)
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=procurement_db

# Redis Settings
REDIS_URL="redis://localhost:6379"

# CORS Settings
BACKEND_CORS_ORIGINS=["http://localhost:3000", "http://localhost:3001"]

# Email Settings (Optional)
SMTP_TLS=True
SMTP_PORT=587
SMTP_HOST="smtp.gmail.com"
SMTP_USER=""
SMTP_PASSWORD=""
EMAILS_FROM_EMAIL="noreply@procurement-system.com"
EMAILS_FROM_NAME="Procurement System"

# First Superuser
FIRST_SUPERUSER=admin@procurement-system.com
FIRST_SUPERUSER_PASSWORD=changethis123

# File Storage
UPLOAD_DIR="./uploads"
MAX_UPLOAD_SIZE=10485760  # 10MB in bytes

# Logging
LOG_LEVEL="INFO"

# Environment
ENVIRONMENT="development"
